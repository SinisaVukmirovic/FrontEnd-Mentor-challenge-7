---
import logo from '/imgs/logo.svg';

const links = [
    {
        href: '#features',
        text: 'Features'
    },
    {
        href: '/team',
        text: 'Team'
    },
    {
        href: '#',
        text: 'Sign In'
    }
];
---

<nav>
    <a href="/" class="logo">
        <img src={logo} alt="Logo">
    </a>
    <ul class="nav-links">
        {links.map(link => (
            <li>
                <a href={link.href}>{link.text}</a>
            </li>
        ))}
    </ul>
</nav>

<style>
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
    }

    .logo img {
        max-width: 5rem;
        flex: 1;
    }

    .nav-links {
        display: flex;
    }
    
    .nav-links li {
        padding: .25rem 1rem;
    }

    .nav-links li:last-child {
        background-color: var(--Blue-cta);
        border-radius: 10rem;
        color: var(--White);
        transition: all 250ms ease-in-out;

        &:hover {
            background-color: var(--Cyan-cta);
        }
    }

    .nav-links a {
        font-size: .9rem;
        color: var(--Dark-White);

        &:hover {
            text-decoration: underline;
            color: var(--White);
        }
    }

    @media (min-width: 1440px) {
        nav {
            padding: 4rem 5% 1rem;
        }

        .nav-links li {
            margin: 0 1rem;
        }

        .logo img {
            max-width: 10rem;
        }
    }
</style>