<style>
    footer {
        padding: 18rem 2rem 0;
        background-color: var(--Dark-Blue-footer-bg);
    }

    .logo {
        display: block;
        margin-left: 1rem;
    }

    .info {
        margin: 3rem 0;
    }

    .details {
        margin: 1rem 0;
    }

    .text,
    .phone-mail div {
        display: grid;
        grid-template-columns: 1rem auto;
        gap: 1rem;
        margin: 1rem 0;
    }

    .text p {
        font-size: 1.2rem;
    }

    .attribution {
        text-align: center;
        font-size: .7rem;
        margin-top: 2rem;
        padding: .5rem;
        border-top: 2px solid var(--Dark-Blue-intro);

        & a {
            color: var(--Blue-cta);
        }
    }

    @media (min-width: 1440px) {
        footer {
            padding: 10rem 10% 0;
            background-color: var(--Dark-Blue-footer-bg);
        }

        .logo {
            margin-left: 0;
            width: 6rem;
        }

        .info {
            display: grid;
            grid-template-columns: 3fr 2fr;
            gap: 7rem;
            margin: 1rem 0;
        }

        .details {
            margin: 0;
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 5rem;

            & p {
                font-size: .9rem;
            }
        }
    }
</style>