<section class="access">
    <h3>Get early access today</h3>
    <p>It only takes a minute to sign up and our free starter tier is extremely generous. If you have any questions, our support team would be happy to help you.</p>
    <form>
        <input type="email" name="email" id="email" placeholder="email@example.com">
        <p class="warning">Please enter a valid email address</p>
        <button>Get Started For Free</button>
    </form>
</section>

<style>
    .access {
        position: relative;
        z-index: 2;
        background-color: var(--Dark-Blue-intro);
        padding: 2rem;
        margin: 8rem 1.5rem -12rem;
        text-align: center;

        & p {
            margin: 1rem 0;
        }
    }

    input,
    button {
        padding: 1rem 2rem;
        width: 100%;
        margin: 1rem auto;
        border-radius: 10rem;
        outline: none;
        border: none;
    }

    input::placeholder {
        color: rgba(0, 0, 0, .5);
    }

    .warning {
        color: var(--Light-Red);
        font-size: .7rem;
        margin: 0 !important;
        position: absolute;
        bottom: 7rem;
        left: 50%;
        transform: translateX(-50%);
        display: none;
    }

    button {
        background-color: var(--Blue-cta);
        color: var(--White);

        &:hover {
            background-color: var(--Cyan-cta);
            color: var(--Dark-Blue-main-bg);
        }
    }

    @media (min-width: 768px) {
        form {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 1rem;
        }
    }

    @media (min-width: 1440px) {
        .access {
            padding: 2rem 4rem;
            margin: 12rem 20% -7rem;
        }

        h3 {
            font-size: 1.7rem;
        }

        p {
            font-size: .85rem;
        }

        form {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 2rem;
        }

        .warning {
            transform: translateX(0);
            bottom: 2rem;
            left: 6rem;
        }
    }
</style>

<script>
    const form = document.querySelector('form');
    const emailInput = form.querySelector('input');
    const emailRegex = /^([a-z\d\.-]+)@([a-z\d-]+)\.([a-z]{2,6})(\.[a-z]{2,6})?$/;
    const warning = form.querySelector('.warning');

    form.addEventListener('submit', (e) => {
        e.preventDefault();
        const correctInput = emailRegex.test(emailInput.value);
        if (!correctInput) {
            emailInput.style.outline = '3px solid var(--Light-Red)';
            warning.style.display = 'block';
        }
    });

    form.addEventListener('input', () => {
        emailInput.style.outline = 'none';
        warning.style.display = 'none';
    });

    emailInput.addEventListener("focusout", () => {
        emailInput.value = '';
        emailInput.style.outline = 'none';
        warning.style.display = 'none';
    });
</script>